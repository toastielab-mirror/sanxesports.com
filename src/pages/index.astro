---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'Sanx esports',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title">
      Welcome to <span class="hidden xl:inline">Sanx Esports</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Here at SanX</span> we manage teams, develop partnerships with sponsors, players, and content creators.</span
      >
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="projects"
    tagline="Projects"
    title="What we are up to"
    subtitle="Here is some of the projects we have started working on."
    items={[
      {
        title: 'Toastielab',
        description:
          'Toastielab is a small git platform operated by us which is operated by one of our founders Toastie',
        icon: 'tabler:brand-git',
      },
      {
        title: 'Dragons child hosting',
        description: 'Our small hosting startup providing servers for Minecraft, Terraria, Teamspeak 3 and more.',
        icon: 'tabler:server',
      },
      {
        title: 'Valkyriecoms',
        description: 'Our small social platform which is free from censorship and trackers.',
        icon: 'tabler:brand-mastodon',
      },
    ]}
  />
</Layout>

---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
// import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'Sanx esports',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title">
      Welcome to <span class="hidden xl:inline">Sanx Esports</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Here at SanX</span> we manage teams, develop partnerships with sponsors, players, and content creators.</span
      >
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <!-- <Note /> -->

  <!-- Features Widget *************** -->

  <Features
    id="coming-soon"
    tagline="Coming soon!"
    title="Coming soon"
    subtitle="This section is a work in progress."
    items={[
      {
        title: 'Not much yet',
        description:
          'Check back later to see what we have put here.',
      },
    ]}
  />
</Layout>
